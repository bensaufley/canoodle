template(name='noodleNew')
  .row
    .medium-4.columns
      h2 New Noodle
    .medium-8.columns
      form#new-noodle(action='/noodles', method='POST')
        .row
          .medium-4.columns
            label.middle(for='noodle_name') Name:    
          .medium-8.columns
            input(type='text', name='noodle[name]', placeholder='Noodle Name')
        .row
          .medium-8.medium-offset-4.columns
            button.button.success.expand(type='submit') + Create noodle
